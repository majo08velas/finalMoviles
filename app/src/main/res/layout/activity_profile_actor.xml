<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tbar_title"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:textSize="30sp"/>
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/melissa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/actor_name_text"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:background="@drawable/round_ibutton"
        android:text="Melissa Lewis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"/>

    <TextView
        android:id="@+id/acto_rol_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actor_name_text"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="Rol: "/>

    <TextView
        android:id="@+id/actor_profesion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acto_rol_text"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="Profesión: "/>

    <TextView
        android:id="@+id/actor_position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actor_profesion_text"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="Cargo: "/>

    <TextView
        android:id="@+id/actor_days_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actor_position_text"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="Días fuera de la tierra: "/>

    <Button
        android:id="@+id/buttonProfileActor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="Ver actor"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actor_days_text" />



</androidx.constraintlayout.widget.ConstraintLayout>